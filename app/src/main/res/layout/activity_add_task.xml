            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Add Task"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FAFAFA" />
    </Toolbar>

