                android:padding="5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:padding="2dp"
                android:text="Start Date:"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
